scriptpath=`readlink -f $0`
scriptdir=`dirname $scriptpath`
testdir=$scriptdir/..
helperdir=$testdir/helpers
threadsafe=@OMX_LIB_THREAD_SAFETY@

find_programs()
{
    if [ -f $1/../Makefile ] ; then
	TOOLS_DIR="$1/../../tools"
	TESTS_DIR="$1/../../tests"
	MXTESTS_DIR="$1/../mx"
    else
	TOOLS_DIR="$2/bin"
	TESTS_DIR="$2/bin/tests"
	MXTESTS_DIR="$2/bin/tests"
    fi
}


process_omx_test_verbose_env() {
    case $OMX_TEST_VERBOSE in
	2)  ;;
	1)  exec >/dev/null ;;
	*)  exec >/dev/null 2>&1
    esac
}


pre_check() {
    grep -q open_mx /proc/modules	    || { echo 'module not loaded' >&2 && return 1	;}
    test -c /dev/open-mx -a -r /dev/open-mx || { echo 'device not accessible' >&2 && return 1	;}

    #$TOOLS_DIR/omx_info | grep -qE '^ .* \(board #0 name lo addr 00:00:00:00:00:00\)'

    { $TOOLS_DIR/omx_info | grep -qE '^ localhost \(board #0 name lo addr 00:00:00:00:00:00\)' ;} || \
	{ echo 'loopback interface not found' >&2 && return 1 ;}
}


find_programs $scriptdir @prefix@
pre_check || exit 77
process_omx_test_verbose_env

testname=`basename $0`

case $testname in
    loopback_native.sh)		$TESTS_DIR/omx_loopback_test ;;
    loopback_shared.sh)		$TESTS_DIR/omx_loopback_test -s ;;
    loopback_self.sh)		$TESTS_DIR/omx_loopback_test -S ;;
    unexpected.sh)		$TESTS_DIR/omx_unexp_test ;;
    unexpected_with_ctxids.sh)	OMX_CTXIDS=10,10 $TESTS_DIR/omx_unexp_test ;;
    unexpected_handler.sh)	$TESTS_DIR/omx_unexp_handler_test ;;
    truncated.sh)		$TESTS_DIR/omx_truncated_test ;;
    wait_any.sh)		OMX_DISABLED_SHARED=1 $helperdir/omx_test_double_app \
				$MXTESTS_DIR/mx_wait_any_test ;;
    cancel.sh)			$helperdir/omx_test_double_app -s $TESTS_DIR/omx_cancel_test ;;
    wakeup.sh)			test x$threadsafe = x0 || \
				$helperdir/omx_test_double_app -s $MXTESTS_DIR/mx_wakeup_test ;;
    addr_context.sh)		$helperdir/omx_test_double_app $TESTS_DIR/omx_endpoint_addr_context_test ;;
    multirails.sh)		$helperdir/omx_test_double_app $TESTS_DIR/omx_rails -R 3 -- \
				-d localhost:0,localhost:1,localhost:2 ;;
    monothread_wait_any.sh)	test x$threadsafe = x0 || \
				$helperdir/omx_test_double_app $TESTS_DIR/omx_multithread_wait_any -p 1 -t 1 -- \
				-d localhost ;;
    multithread_wait_any.sh)	test x$threadsafe = x0 || \
				$helperdir/omx_test_double_app $TESTS_DIR/omx_multithread_wait_any -- \
				-d localhost ;;
    multithread_ep.sh)		test x$threadsafe = x0 || \
				$TESTS_DIR/omx_multithread_ep_test ;;
    vect_native.sh)		$TESTS_DIR/omx_vect_test ;;
    vect_shared.sh)		$TESTS_DIR/omx_vect_test -s ;;
    vect_self.sh)		$TESTS_DIR/omx_vect_test -S ;;
    pingpong_native.sh)		OMX_DISABLE_SHARED=1 $helperdir/omx_test_double_app \
				$TESTS_DIR/omx_perf -y ;;
    pingpong_shared.sh)		$helperdir/omx_test_double_app $TESTS_DIR/omx_perf -y ;;
    randomloop.sh)
	$MXTESTS_DIR/mx_msg_loop -R -P 11 & _pid=$!
	sleep 20
	echo "Killing the program now that it ran for 20s..."
	kill -9 $_pid 2>/dev/null
	sleep 1
	;;
    *)				echo "Unknown test" >&2 && exit 1
esac
